#!/bin/bash -e

job_dir=/var/vcap/jobs/mysql-wavefront-connector
run_dir=/var/vcap/sys/run/mysql-wavefront-connector
log_dir=/var/vcap/sys/log/mysql-wavefront-connector
package_dir=/var/vcap/packages/telegraf
pidfile=$run_dir/telegraf.pid

source /var/vcap/packages/common/pid_utils.sh

case $1 in

  start)
    log "Starting telegraf..."
    pid_guard $pidfile "telegraf"

    mkdir -p $run_dir
    chown -R vcap:vcap $run_dir
    mkdir -p $log_dir
    chown -R vcap:vcap $log_dir

    cd $package_dir

    su - vcap -p -c -o pipefail "PATH=$PATH $package_dir/telegraf \
      --config $job_dir/config/telegraf.conf \
      >>$log_dir/telegraf.stdout.log \
      2>>$log_dir/telegraf.stderr.log &"

    log "Starting telegraf... done"
    ;;

  stop)
    log "Stopping telegraf..."
    kill_and_wait $pidfile
    log "Stopping telegraf... done"
    ;;

  *)
    echo "Usage: telegraf_ctl {start|stop}"
    ;;

esac
